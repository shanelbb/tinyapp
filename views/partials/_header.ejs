<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (!user) { %>
      <div class="d-flex">
        <form class="form-inline" method="POST" action="/login">
          <div class="form-group mr-2">
            <label for="username" class="sr-only">Username</label>
            <input type="text" id="username" name="username" placeholder="<% if (error && submitted) { %> Input cannot be empty! <% } else { %> Username <% } %>" />
          </div>
          <button type="submit" class="btn btn-outline-dark mr-2">Log in</button>
          <a href="/register"><button type="button" class="btn btn-outline-dark">Register</button></a>
        </form>
      </div>

      <% } else { %>
      <form class="form-inline" method="POST" action="/logout">
        <div class="form-group mr-2">
          <p class="mb-0">Logged in as <%= user.email %></p>
        </div>
        <button type="submit" class="btn btn-outline-dark">Log Out</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
